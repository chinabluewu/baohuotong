<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:stretchColumns="0,1,2"
        android:background="@android:color/darker_gray">

        <FrameLayout style="@style/meun_top_lin"
            android:background="#ff697b6e">
            <TextView android:layout_gravity="left|center" android:id="@+id/tv_zc_back" android:layout_width="60dp" android:layout_height="40dp"
                android:text="返回" android:textColor="@android:color/white"
                android:textSize="16dp" android:gravity="center_vertical"
                android:paddingLeft="20dp" />
            <TextView  android:layout_gravity="right|center" android:id="@+id/tv_adduser" android:layout_width="90dp" android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:textSize="16dp" android:gravity="center"/>
            <TextView style="@style/meun_top_title_center" android:layout_gravity="center" android:text="@string/app_name" />
        </FrameLayout>

        <LinearLayout android:layout_width="0px"
            android:layout_height="0px" android:focusable="true"
            android:focusableInTouchMode="true"></LinearLayout>




        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcyhm"
                android:layout_column="1"
                android:hint="输入用户名"
                android:textSize="16dp"
                android:layout_weight="0.7" />
        </TableRow>



        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="密码:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcmm"
                android:layout_column="1"
                android:hint="输入密码(6~8位)"
                android:textSize="16dp"
                android:layout_weight="0.7"
                android:password="true" />


        </TableRow>


        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="确认密码:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcmm2"
                android:layout_column="1"
                android:hint="再次输入密码"
                android:textSize="16dp"
                android:layout_weight="0.7"
                android:password="true" />


        </TableRow>


        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="真实姓名:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcxm"
                android:layout_column="1"
                android:hint="请输入真实姓名"
                android:textSize="16dp"
                android:layout_weight="0.7" />

        </TableRow>

        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="身份证号:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcsfzh"
                android:layout_column="1"
                android:hint="请输入身份证号"
                android:textSize="16dp"
                android:layout_weight="0.7" />

        </TableRow>

        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="联系电话:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zcdh"
                android:layout_column="1"
                android:hint="请输入手机号(11位数字)"
                android:textSize="16dp"
                android:layout_weight="0.7"
                android:numeric="integer"
                android:phoneNumber="false" />
        </TableRow>



        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@color/graywhite"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="所在城市 .."
                android:textSize="16dp"
                android:id="@+id/tv_zccs"
                android:background="#ff1b8a68"
                android:textColor="@android:color/white"
                android:layout_weight="0.24"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/et_zccs"
                android:layout_column="1"
                android:hint="   请点击左边选择所在地"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_weight="0.7" />

        </TableRow>


        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="联系地址:"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_weight="0.25" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_zclxdz"
                android:layout_column="1"
                android:hint="请输入联系地址"
                android:textSize="16dp"
                android:layout_weight="0.7" />
        </TableRow>

        <TableRow android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/white"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/tv_kb1"
                android:layout_weight="0.1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="提交"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/btn_zctj"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="20dp"
                android:id="@+id/tv_kb2"
                android:layout_weight="0.1" />
        </TableRow>

    </TableLayout>
</ScrollView>
